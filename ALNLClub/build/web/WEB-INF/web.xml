<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>booksFilePath</param-name>
        <param-value>/WEB-INF/books.txt </param-value>
    </context-param>
    <context-param>
        <param-name>custServEmail</param-name>
        <param-value>email@email.com</param-value>
    </context-param>
    <listener>
        <listener-class>club.util.CartContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ALNLDisplayBooksServlet</servlet-name>
        <servlet-class>club.admin.ALNLDisplayBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ALNLLoanServlet</servlet-name>
        <servlet-class>club.cart.ALNLLoanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ALNLMemberAdminController</servlet-name>
        <servlet-class>club.admin.ALNLMemberAdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ALNLLoanServlet</servlet-name>
        <url-pattern>/ALNLLoan</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ALNLCartServlet</servlet-name>
        <servlet-class>club.cart.ALNLCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ALNLClearCartServlet</servlet-name>
        <servlet-class>club.cart.ALNLClearCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ALNLDisplayBooksServlet</servlet-name>
        <url-pattern>/ALNLDisplayBooks</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ALNLAddBook</servlet-name>
        <servlet-class>club.admin.ALNLAddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ALNLAddBook</servlet-name>
        <url-pattern>/ALNLAddBook</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/ALNLError.jsp</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>ALNLCartServlet</servlet-name>
        <url-pattern>/ALNLCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ALNLClearCartServlet</servlet-name>
        <url-pattern>/ALNLClearCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ALNLMemberAdminController</servlet-name>
        <url-pattern>/ALNLMemberAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ALNLIndex.jsp</welcome-file>
    </welcome-file-list>
</web-app>
